/* widget/search-column/search-column.wxss */
.search_column {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  padding: 12rpx 32rpx;
  width: calc(100vw - 32rpx * 2);
}

.search_icon {
  position: absolute;
  top: 28rpx;
  left: 48rpx;
  width: 32rpx;
  height: 32rpx;
}

.del_icon {
  position: absolute;
  top: 28rpx;
  right: 136rpx;
  width: 32rpx;
  height: 32rpx;
}

.search_column>input {
  padding-left: 64rpx;
  padding-right: 64rpx;
  width: calc(100% - 88rpx - 64rpx * 2);
  background-color: #F6F6F6;
  border-radius: 32rpx;
  height: 64rpx;
  font-size: 24rpx;
}

.search_column>text {
  padding-left: 32rpx;
}

.search_key_list {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
}

.search_key_list>view {
  width: 650rpx;
  border-bottom: 2rpx solid #f4f4f4;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}