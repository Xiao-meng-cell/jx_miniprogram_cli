/* widget/homepage-button/homepage-button.wxss */
.homepage_button{
    height: 90rpx;
    width: 100rpx;
    z-index: 1100;
    position: fixed;
    right: 0rpx;
    /* border-radius: 50rpx; */
    border-top-left-radius: 50rpx;
    border-bottom-left-radius: 50rpx;
    border: 2rpx solid rgba(218, 218, 218, 0.8);
    background-color: rgba(240, 240, 240, 0.8);
    box-shadow: 0 0 40rpx 8rpx rgba(114, 114, 114, 0.1) ;

}

.homepage_button_bg{
  height: 70rpx;
  width: 70rpx;
  border-radius: 50rpx;
  margin: 10rpx 0 10rpx 10rpx;
}



.view_default_hover {
  background-color: #ECECEC;
  opacity: 0.7;
}