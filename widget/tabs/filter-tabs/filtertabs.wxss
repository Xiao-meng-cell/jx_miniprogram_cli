/* widget/filter-tabs/filtertabs.wxss */
.filter {
  width: 100%;
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  font-size: 24rpx;
  padding: 10rpx 0;
}

.filter .item {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.col {
  display: flex;
  flex-flow: column;
}
.active {
  color: #000;
  font-weight: bold;
}