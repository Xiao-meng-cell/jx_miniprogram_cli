/* widget/businessChartMap/businessChartMap.wxss */

/* 图表数据 start */
.chart {
  position: relative;
  display: flex;
  flex-direction: column;
  width: calc(100vw - 24rpx * 2);
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx 0;
}

.chartMap2 {
  width: 100%;
}

.chartTile {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  width: 100%;
}

.chartTile>text {
  line-height: 28rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #082841;
}

.chartMap {
  position: relative;
  display: flex;
  justify-content: center;
  width: 100%;
  margin-top: 32rpx;
}

.chartMap>image {
  width: calc(100vw - 32rpx * 2 - 80rpx * 2);
}

.chartMap>view:nth-of-type(1) {
  position: absolute;
  bottom: 32rpx;
  display: flex;
  justify-content: center;
  background: #ffffff;
  width: calc(100vw - 32rpx * 2 - 92rpx * 2);
  padding: 18rpx 0px;
  border-radius: 36rpx;
  box-shadow: 0px 12rpx 32rpx 0px rgba(190, 212, 230, 0.50);
}

.chartMap>view:nth-of-type(1)>text {
  font-size: 24rpx;
  font-weight: 500;
  color: #083658;
}

.chartScope {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 40rpx;
}

.scopeTitle {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.scopeTitle>view:nth-of-type(1) {
  width: 120rpx;
  height: 4rpx;
  opacity: 0.5;
  background: linear-gradient(90deg, rgba(0, 128, 255, 0.00), #2f95fb);
  border-radius: 2rpx;
}

.scopeTitle>view:nth-of-type(2) {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-left: 68rpx;
  margin-right: 68rpx;
}

.scopeTitle>view:nth-of-type(2)>text:nth-of-type(1) {
  line-height: 36rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #2F95FB;
}

.scopeTitle>view:nth-of-type(2)>text:nth-of-type(2) {
  line-height: 28rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #082841;
}

.scopeTitle>view:nth-of-type(3) {
  width: 120rpx;
  height: 4rpx;
  opacity: 0.5;
  background: linear-gradient(90deg, #2f95fb, rgba(0, 128, 255, 0.00));
  border-radius: 2rpx;
}

.scopeImg {
  position: relative;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  margin-top: 48rpx;
}

.scopeImg>image {
  width: 288rpx;
  height: 288rpx;
}

.scopeImg>view {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.scopeImg>view>text:nth-of-type(1) {
  font-size: 36rpx;
  font-weight: bold;
  color: #2f95fb;
  margin-bottom: 16rpx;
}

.scopeImg>view>text:nth-of-type(2) {
  font-size: 20rpx;
  color: #2f95fb;
  padding: 2rpx 28rpx;
  background: rgba(190, 212, 230, 0.20);
  border-radius: 16rpx;
}

.scopeList {
  display: flex;
  flex-direction: row;
  width: 100%;
  flex-wrap: wrap;
  margin-top: 56rpx;
}

.scopeList>view {
  display: flex;
  flex-direction: row;
  padding-left: 56rpx;
  width: calc((100% - 56rpx * 3) / 3);
  margin-bottom: 16rpx;
}

.scopeList>view>view {
  width: 16rpx;
  height: 16rpx;
  margin-right: 8rpx;
}

.scopeList>view>text {
  font-size: 20rpx;
  line-height: 20rpx;
}

/* 图表数据 end */