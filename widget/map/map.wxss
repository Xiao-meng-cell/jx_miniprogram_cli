/* widget/map/map.wxss */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.529);
  z-index: 9999;
  top: 0;
  left: 0;
}

.mapContainer {
  width: 100%;
  padding: 20rpx;
  height: 100%;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}


.mapView {
  width: 100%;
  border-radius: 15rpx;
  overflow: hidden;
}

.mapCloseBtn {
  width: 100%;
  text-align: right;
  margin-bottom: 10rpx;
}

.mapCloseBtn image {
  width: 60rpx;
  height: 60rpx;
}

.controlsRightTopCover {
  display: flex;
  flex-flow: row;
  position: absolute;
  top: 40rpx;
  right: 10px;
  justify-content: space-betweens;
  align-items: center;
  background: #fff;
  margin: 10rpx 0;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04)
}

.controlsRightTopCover .text {
  width: 60rpx;
  height: 100%;
  background: #fff;
  color: #000;
  font-size: 32rpx;
  padding: 15rpx;
  text-align: center;
}

.controlsRightTopCover .active {
  background: #2F95FB;
  color: #fff;
}

.controlsRightCover {
  position: absolute;
  top: 200rpx;
  right: 20rpx;
  width: 160rpx;
}

.controlsRightCover .row {
  display: flex;
  flex-flow: row;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  background: #fff;
  padding: 15rpx;
  margin: 10rpx 0;
}

.controlsRightCover .image {
  width: 30rpx;
  height: 30rpx;
}


.controlsRightCover .text {
  font-size: 25rpx;
  margin-left: 10rpx;
}

.controlsLeftCover {
  display: flex;
  flex-flow: column;
  position: absolute;
  bottom: 80rpx;
  left: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, .12), 0 0 12rpx rgba(0, 0, 0, .04)
}

.controlsLeftCover .image {
  width: 60rpx;
  height: 60rpx;
}