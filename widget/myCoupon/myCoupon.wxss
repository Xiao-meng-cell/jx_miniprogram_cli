/* widget/myCoupon/myCoupon.wxss */
.coupon_page {
  margin: 0;
  padding: 24rpx 32rpx 120rpx 32rpx;
  background: #F6F6F6;
}

.coupon_box {
  margin-bottom: 24rpx;
  position: relative;
}

.coupon_box1 {
  margin-bottom: 110rpx;
  position: relative;
}

.top_box {
  height: 88px;
  padding: 0 32rpx 16rpx 32rpx;
  border-radius: 24rpx 24rpx 0 0;
}

.recommend {
  border-radius: 24rpx 4rpx 16rpx 4rpx;
  background-image: linear-gradient(to right, #5ABDFF, #2F95FB);
  color: #ffffff;
  padding: 8rpx 16rpx;
  text-align: center;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 5;
}

.price_color {
  color: #2F95FB
}

.coupon_type {
  color: #A0A0A0;
}

.coupon_text {
  margin: 20rpx 0 8rpx 0;
}

.LeftRound {
  /*左半圆*/
  z-index: 50;
  position: absolute;
  right: 0;
  top: 164rpx;
  width: 12rpx;
  height: 24rpx;
  border-radius: 12rpx 0 0 12rpx;
  background-color: #f6f6f6;
}

.centerRound {
  z-index: 50;
  position: absolute;
  left: 34rpx;
  top: 176rpx;
  background: #ffffff;
  height: 2rpx;
  width: calc(100% - 68rpx);
  border-top: 1px dashed #eeeeee;
}

.RightRound {
  /*右半圆*/
  z-index: 50;
  position: absolute;
  left: 0;
  top: 164rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 0 12rpx 12rpx 0;
  background-color: #f6f6f6;
}

.bottom_box {
  height: 80rpx;
  padding: 6rpx 32rpx;
  border-radius: 0 0 24rpx 24rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 16rpx 0 rgba(230, 230, 230, 0.60);
  /* background-color: white; */
  position: absolute;
  left: 0;
  top: 176rpx;
  width: calc(100% - 64rpx);
  z-index: 22;
}

.no_selected {
  margin-left: auto;
  border-radius: 100%;
  width: 40rpx;
  height: 40rpx;
}

.selected {
  margin-left: auto;
  border-radius: 100%;
  width: 40rpx;
  height: 40rpx;
}

.total {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 222;
  width: 100%;
  background: #ffffff;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
}

.total_img {
  position: fixed;
  right: 32rpx;
  bottom: 16rpx;
  z-index: 300;
  width: 36rpx;
  height: 38rpx;
  background: #a0a0a0;
}

.total_btn {
  margin-left: 16rpx;
  color: #FFFFFF;
  background: #2f95fb;
  border-radius: 36rpx;
  padding: 18rpx 76rpx;
  text-align: center;
}

.x_layout {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.y_layout {
  display: flex;
  flex-direction: column;
}

.db_inline {
  display: inline-block;
  vertical-align: middle;
}

.used_btn {
  padding: 6rpx 20rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 24rpx;
  margin-left: auto;
  color: #2f95fb;
  border: 2rpx solid #2f95fb;
}

.used_btn1 {
  color: #D8D8D8 !important;
  border: 2rpx solid #D8D8D8 !important;
}

.bottom_btn {
  width: 16rpx;
  height: 16rpx;
  opacity: 1;
  margin-left: 8rpx;
}

.rule_box {
  margin-top: 80rpx;
  padding: 20rpx 32rpx;
  background: #fcfcfc;
  border-radius: 0 0 24rpx 24rpx;
  font-size: 22rpx;
  color: #808080;
}

.invalid {
  width: 189rpx;
  height: 189rpx;
  position: absolute;
  right: 80rpx;
  top: 20rpx;
  z-index: 100;
  opacity: 0.4;
  border-radius: 100%;
}

.invalid_color {
  color: #ffffff
}

.valid_color {
  color: #37424D
}

.color1 {
  color: #808080;
}

.color2 {
  color: #d8d8d8;
}

.loadAll {
  color: #d8d8d8;
  margin-top: 24rpx;
  text-align: center;
}

