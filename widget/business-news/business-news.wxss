/* widget/business-news/business-news.wxss */

.infoTitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #37424D;
  margin-top: 32rpx;
}

.partner>view:nth-child(1) {
  display: flex;
  flex-direction: row;
  font-size: 22rpx;
  margin-bottom: 32rpx;
}

.partner>view:nth-child(1)>text:nth-of-type(1) {
  color: #808080;
}

.partner>view:nth-child(1)>text:nth-of-type(2) {
  color: #A0A0A0;
}

.partner>view:nth-child(2) {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.partner_info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.partner_info>image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  background: #a0a0a0;
  margin-right: 16rpx;
}

.partner_info>view {
  display: flex;
  flex-direction: column;
}

.partner_info>view>text:nth-child(1) {
  font-size: 28rpx;
  color: #37424D;
  margin-bottom: 8rpx;
}

.partner_info>view>text:nth-child(2) {
  font-size: 22rpx;
  color: #A0A0A0;
}

.hot_partner {
  font-size: 22rpx;
  color: #808080;
}

.new_partner {
  font-size: 22rpx;
  color: #5ABDFF;
}

.h5 {
  display: flex;
  flex-direction: column;
}

.h5>text {
  font-size: 28rpx;
  color: #37424D;
  margin-bottom: 24rpx;
}

.h5>image {
  width: 622rpx;
}

.merchant {
  display: flex;
  flex-direction: column;
}

.merchant>image {
  width: calc(100vw - 32rpx * 2 - 16px * 2);
  margin-top: 16rpx;
}

.live {
  display: flex;
  flex-direction: row;
  background: #fff;
  border-radius: 24rpx;
  margin-top: 24rpx;
  padding-right: 24rpx;
}

.live>view:nth-of-type(1) {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(212deg, #C8E9FF, #2F95FB);
  box-shadow: rgba(47, 149, 251, 0.5) 0px 6rpx 12rpx 0px;
  border-top-left-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
  border-top-right-radius: 36rpx;
  border-bottom-right-radius: 64rpx;
}

.liveIconImg>image:nth-of-type(1) {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
}

.liveIconImg>image:nth-of-type(2) {
  position: absolute;
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  margin-left: 24rpx;
  margin-top: 24rpx;
}

.liveInfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: calc(100% - 24rpx);
  margin-left: 8rpx;
}

.liveInfo>view:nth-of-type(1) {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
}

.liveInfo>view:nth-of-type(1)>image:nth-of-type(1) {
  width: 60rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

.liveTag {
  background: #FF476C;
  border-radius: 16rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  color: #fff;
  font-size: 22rpx;
}

.liveInfo>view:nth-of-type(2) {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #a0a0a0;
  font-size: 22rpx;
  margin: 8rpx 0;
}

.liveInfo>view:nth-of-type(2)>image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.allList {
  display: flex;
  flex-direction: column;
  margin-bottom: 45rpx;
}

.newsItem {
  position: relative;
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-top: 24rpx;
}

.newsItem_top {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.newsItem_top>image {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background: #a0a0a0;
  margin-right: 16rpx;
}

.newsItem_top_info {
  display: flex;
  flex-direction: column;
  width: calc(100% - 72rpx - 16rpx);
}

.text_ {
  word-break: break-all;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 65%;
}

.newsItem_top_info_row1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
}

.newsItem_top_info_row1>view:nth-of-type(1) {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.newsItem_top_info_row1>view:nth-of-type(1)>text {
  max-width: calc(100% - 60rpx - 8rpx - 16rpx);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.newsItem_top_info_row1>view:nth-of-type(1)>image {
  width: 60rpx;
  height: 24rpx;
  margin-left: 8rpx;
  margin-right: 16rpx;
}

.newsItem_top_info_row1>view:nth-of-type(2) {
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: flex-start;
}

.newsItem_top_info_row1>view:nth-of-type(2)>text {
  font-size: 20rpx;
  padding: 2rpx 10rpx 2rpx 10rpx;
  border-radius: 16rpx;
}

.natureTag {
  color: #D8D8D8;
  border: #D8D8D8 2rpx solid;
}

.newsItem_top_info>text:nth-child(2) {
  font-size: 22rpx;
  color: #A0A0A0;
  margin-top: 4rpx;
}


.goodsNewTag {
  color: #2F95FB;
  border: #2F95FB 2rpx solid;
}

.newsItem_desc {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #37424D;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
  overflow: hidden;
  word-wrap: break-word;
}

.single {
  display: flex;
  position: relative;
}

.flag3D {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.flag3D>image,
.videoMask>image {
  width: 64rpx;
  height: 64rpx;
}

.videoMask {
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.newsItem_content {
  margin-top: 16rpx;
}

.newsItem_content>view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.newsItem_content>video {
  max-width: 622rpx;
  max-height: 420rpx;
  border-radius: 16rpx;
}

.newsItem_goodsTag {
  display: flex;
  flex-direction: row;
}

.newsItem_goods {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 24rpx 20rpx 24rpx;
  background: rgba(246, 246, 246, 0.4);
  border-radius: 24rpx;
  margin-top: 32rpx;
}

.newsItem_goods>image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
}

.newsItem_goods_info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin: 0px 16rpx;
}

.newsItem_goods_info>text:nth-child(1) {
  font-size: 24rpx;
  color: #37424D;
}

.newsItem_goods_info>text:nth-child(3) {
  font-size: 20rpx;
  color: #FF6F00;
}

.newsItem_goods_buy {
  display: flex;
  flex-direction: column;
  padding: 6rpx 16rpx 6rpx 16rpx;
  background: #2F95FB;
  border-radius: 20rpx;
  color: #fff;
  font-size: 20rpx;
}

.newsItem_operate {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 32rpx;
  padding-top: 26rpx;
  border-top: #eee 2rpx solid;
}

.newsItem_operate>view {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  color: #808080;
}

.newsItem_operate>view:not(:first-child) {
  margin-left: 62rpx;
}

.newsItem_operate>view>image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.newsItem_operate>image {
  width: 40rpx;
  height: 40rpx;
}

.moreOperateBG {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 5;
}

.moreOperate {
  position: absolute;
  right: 32rpx;
  bottom: 90rpx;
  z-index: 10;
  box-shadow: rgba(128, 128, 128, 0.4) 0px 0px 24rpx 0px;
  border: #eee 2rpx solid;
  border-radius: 24rpx;
  background: #fff;
  width: 260rpx;
  padding-left: 14rpx;
  padding-right: 14rpx;
}

.moreOperate>view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
  font-size: 28rpx;
  color: #37424D;
}

.moreOperate>view:not(:last-child) {
  border-bottom: #eee 2rpx solid;
}

.single>image {
  width: calc(100vw - 32rpx * 4);
  background: #f4f4f4;
}

.four>view,
.multi>view {
  position: relative;
}

.multi>view,
.four>view {
  width: calc((100vw - 32rpx * 2 - 32rpx * 2 - 16rpx) / 3);
  height: calc((100vw - 32rpx * 2 - 32rpx * 2 - 16rpx) / 3);
  margin-bottom: 8rpx;
}

.four>view:nth-child(odd) {
  margin-right: 8rpx;
}

.four>view:nth-child(even) {
  /* margin-right: 121px; */
  margin-right: calc((100vw - 32rpx * 2 - 16px * 2 - 8px) / 3);
}

.multi>view:not(:nth-child(3n)) {
  margin-right: 8rpx;
}

.four>view>image,
.four>view>video,
.multi>view>image,
.multi>view>video {
  width: 100%;
  height: 100%;
}

.moreMedia {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #fff;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.moreMediaImg {
  background: rgba(55, 66, 77, 0.8);
}

.moreMedia>image {
  width: 64rpx;
  height: 64rpx;
}

/* 新版缺省页 start */
.emptyView {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh
}

.emptyView>image {
  width: calc(200rpx * 2);
  height: calc(200rpx * 2);
  margin-top: calc(60rpx * 2);
  margin-bottom: calc(52rpx * 2);
}

.emptyView>text {
  font-size: 32rpx;
  color: #5fa4e9;
  margin-bottom: calc(140rpx * 2);
}

/* 新版缺省页 end */

.loadAll {
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 20rpx;
  color: #A0A0A0;
  margin-top: 32rpx;
}

/* 合伙人 start */
.clerk {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.8);
  z-index: 1000;
}

.clerk>view {
  position: relative;
  display: flex;
  flex-direction: column;
  margin-left: 72rpx;
  margin-right: 72rpx;
  width: calc(100vw - 72rpx * 2);
  background: #fff;
  border-radius: 24rpx;
  padding: 16rpx 24rpx 58rpx 24rpx;
}

.clerk>view>view:nth-child(1) {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
}

.clerkClose {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  width: 24rpx;
  height: 24rpx;
}

.clerk>view>text:nth-child(2) {
  width: 100%;
  font-size: 22rpx;
  font-weight: 400;
  text-align: center;
  color: #a0a0a0;
  line-height: 34rpx;
}

.clerkContent {
  display: flex;
  flex-direction: row;
  margin: 40rpx 16rpx 24rpx 16rpx;
  border: 2rpx solid #eeeeee;
  border-radius: 24rpx;
  padding: 32rpx;
}

.clerkContent>image {
  width: 112rpx;
  height: 112rpx;
  border-radius: 16rpx;
  background: #a0a0a0;
  margin-right: 32rpx;
}

.clerkContent>view {
  display: flex;
  flex-direction: column;
  width: calc(100% - 32rpx - 112rpx);
}

.clerkContent>view>text:nth-child(1) {
  font-size: 28rpx;
  color: #37424D;
}

.clerkContent>view>text:nth-child(2),
.clerkContent>view>text:nth-child(3) {
  font-size: 22rpx;
  color: #A0A0A0;
  margin-top: 12rpx;
}

.clerkParam {
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 24rpx;
  color: #A0A0A0;
}

.clerkParam>text:not(:first-child) {
  margin-left: 80rpx;
}

/* 合伙人 end */

.aline1 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}