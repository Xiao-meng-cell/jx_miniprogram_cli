/* widget/map/map.wxss */


.file_wrap_mask {
  position: fixed;
  width: 100%;
  height: 100vh;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 99999;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}

/* 文件预览 */
.file_msg_box {
  width: 710rpx;
  height: 75%;
  border-radius: 16rpx;
  background: #fff;
}

.hide_file {
  width: 710rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-flow: row;
  justify-content: flex-end;
}

.hide_file image {
  width: 46rpx;
  height: 46rpx;
}

.file_title {
  padding: 0 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.file_box {
  display: block;
  width: 100%;
  height: 100%;
  /* padding: 0 15px; */
  -webkit-overflow-scrolling: touch;
  overflow: auto;
}

.document_box,
.audio_box {
  padding: 80rpx 0;
}

.audio_box image,
.document_box image {
  display: block;
  width: 180rpx;
  height: 180rpx;
  margin: 0rpx auto;
}

.note_txt {
  margin: 20rpx 0rpx 0rpx 0rpx;
  text-align: center;
  color: #2f95fb;
}

.file_box video {
  display: block;
  max-width: 100%;
  max-height: 100%;
  margin: 0 auto;
}

.file_box image {
  display: block;
  margin: 0 auto;
}

.show_map {
  position: fixed;
  right: 4%;
  bottom: 134rpx;
  z-index: 503;
}

.show_map image {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin: 0;
}

.map {
  width: 710rpx;
  padding: 40rpx;
}

.databank_text_text {
  width: 100%;
  padding: 20rpx;
}