/* livePackage/pages/complaint/complaint.wxss */

/* 投诉 start  */
.complaintBG {
  position: absolute;
  background: #fff;
  top: 0;
  left: 0;
  width: 100vw;
  min-height: 100%;
  z-index: 9999;
  padding-bottom: 64rpx;
}

.complaintReturn {
  display: flex;
  flex-direction: row;
  width: 100rpx;
  height: 64rpx;
  align-items: center;
  margin-left: 32rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.complaintReturn>image {
  width: 40rpx;
  height: 40rpx;
}

.complaintMain {
  margin-left: 32rpx;
  margin-right: 32rpx;
  display: flex;
  flex-direction: column;
  width: calc(100vw - 32rpx * 2);
}

.title {
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

textarea {
  width: calc(100% - 24rpx * 2);
  height: 364rpx;
  border: #EEEEEE 1rpx solid;
  border-radius: 16rpx;
  padding: 32rpx 24rpx 32rpx 24rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #D8D8D8;
}

.picList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.picItem {
  position: relative;
  display: flex;
  width: calc((100vw - 32rpx * 2 - 16rpx * 3) / 4);
  height: calc((100vw - 32rpx * 2 - 16rpx * 3) / 4);
  border-radius: 16rpx;
  background: #F6F6F6;
  margin-bottom: 32rpx;
}

.picItem:not(:nth-child(4n+1)) {
  margin-left: 16rpx;
}

.picItem>image {
  width: calc((100vw - 32rpx * 2 - 16rpx * 3) / 4);
  height: calc((100vw - 32rpx * 2 - 16rpx * 3) / 4);
  border-radius: 16rpx;
}

.picItemRemove {
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  top: 0;
  right: 0;
  width: calc((100vw - 32rpx * 2 - 16rpx * 3) / 4 * 0.225);
  height: calc((100vw - 32rpx * 2 - 16rpx * 3) / 4 * 0.225);
  background: rgba(0, 0, 0, 0.8);
  border-top-right-radius: 16rpx;
  border-bottom-left-radius: 8rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: #fff;
}

.addPicItem {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.addPicItem>image {
  width: calc(100% - 48rpx * 2);
  height: calc(100% - 48rpx * 2);
}

.complaintSubmit {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 200rpx;
  background: #2F95FB;
  border-radius: 44rpx;
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  color: #fff;
}

/* 投诉 end  */