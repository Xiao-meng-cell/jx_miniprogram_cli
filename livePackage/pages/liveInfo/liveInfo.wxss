}
/***商家详情 start****/
.merchantInfo {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 24rpx 32rpx 20rpx 24rpx;
  margin: 32rpx;
}
.merchantInfo>view:nth-child(1) {
  display: flex;
  flex-direction: row;
}
.merchantInfo>view:nth-child(1)>image {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  background: #a0a0a0;
}
.merchantInfo>view:nth-child(1)>view {
  display: flex;
  flex-direction: column;
  width: calc(100vw - 32rpx * 2 - 24rpx * 2 - 72rpx);
}
.merchantInfo>view:nth-child(1)>view>view:nth-of-type(1) {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.merchantInfo>view:nth-child(1)>view>view:nth-of-type(1)>image {
  width: 60rpx;
  height: 24rpx;
  margin-left: 12rpx;
}
.merchantInfo>view:nth-child(1)>view>view:nth-child(2) {
  display: flex;
  flex-direction: row;
  margin-top: 24rpx;
  color: #808080;
  font-size: 24rpx;
  position: relative;
}
.merchantInfo>view:nth-child(1)>view>view:nth-child(2)>text:nth-child(2) {
  color: #eeeeee;
  margin-left: 16rpx;
  margin-right: 16rpx;
}
.fgx {
  width: 100%;
  height: 2rpx;
  background-color: #eee;
  margin-top: 32rpx;
}
.fgx1 {
  margin-left: 1%;
  width: 98%;
  height: 2rpx;
  background-color: #eee;
  margin-top: 32rpx;
}

.notPass {
  position: absolute;
  top:12rpx;
  right: 32rpx;
  z-index: 100;
  width: 112rpx;
  height: 112rpx;
}
.business_info_operate {
  margin-top: 20rpx;
  justify-content: space-between;
}

.business_info_operate>view {
  justify-content: center;
  width: 100%;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #808080;
}

.business_info_operate>view>image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/***商家详情 end****/
.item_box{
  position: relative;
  margin: 24rpx 32rpx 0 32rpx;
 padding: 28rpx 24rpx;
 background-color: #ffffff;
 display: flex;
 flex-direction: row;
 border-radius: 24rpx;
}
.item_box>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
background-color: #eeeeee;
margin-right:16rpx ;
}
.item_box>view{
  display: flex;
  flex-direction: column;
}
.first{
  color: #37424D;
  font-size:0.9rem;
  margin-bottom: 16rpx;
  font-weight: 600;
}
.second{
  display: flex;
  flex-direction: row;
  justify-items: center;
align-items: center;
margin: 0 0 10rpx 0;
color:#5ABDFF;
font-size: 0.8rem;
}
.second>image{
  width: 24rpx;
