  margin-left: 24rpx;
}
.third{
  color: #D8D8D8;
  font-size: 20rpx;
}
.fourth{
  color:#A0A0A0;
  font-size: 24rpx;
}
.bottom_btn{
  padding-left: 16rpx;
  padding-right: 16rpx;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
color: #2F95FB;
font-size: 0.6rem;
border:2rpx solid #2F95FB;
position: absolute;
right: 24rpx;
bottom: 28rpx;
border-radius: 20rpx;
background-color: #ffffff;
z-index: 4;
line-height: 32rpx;
}

.showMenu {
  position: fixed;
  bottom: 0px;
  z-index: 6005;
  width: 100%;
}

.showMenu_item {
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 24rpx;
  padding-right: 24rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  text-align: center;
  text-decoration: none;
  line-height: 3;
  border-radius: 0px;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #000;
  background-color: #f8f8f8;
  border-bottom: 2rpx solid rgba(68, 68, 68, 0.3);
}

.showMenu_item:last-child {
  border-bottom: none;
}
