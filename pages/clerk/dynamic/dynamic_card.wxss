/* pages/clerk/dynamic /dynamic_card.wxss */

video {
  width: 100vw;
  height: 100vh;
}

.operate {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}

#voice {
  position: absolute;
  top: 200rpx;
  right: 10rpx;
  width: 48rpx;
  height: 48rpx;
}

.btn {
  position: absolute;
  right: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 96rpx;
  height: 96rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50rpx;
}

.btn cover-image {
  width: 56rpx;
  height: 56rpx;
}

.operate cover-view:nth-child(2) {
  top: calc(200rpx + 48rpx + 100rpx);
}

.operate cover-view:nth-child(3) {
  top: calc(200rpx + 48rpx + 100rpx + (96rpx + 50rpx));
}

.operate cover-view:nth-child(4) {
  top: calc(200rpx + 48rpx + 100rpx + (96rpx + 50rpx) * 2);
}

.operate cover-view:nth-child(5) {
  top: calc(200rpx + 48rpx + 100rpx + (96rpx + 50rpx) * 3);
}

/* 浏览数 start */

.info {
  position: absolute;
  top: calc(200rpx + 48rpx + 100rpx + (96rpx + 50rpx) * 4 - 40rpx);
  left: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #fff;
  font-size: 22rpx;
}

.info cover-image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

/* 浏览数 end */

.profile {
  position: absolute;
  top: calc(200rpx + 48rpx + 100rpx + (96rpx + 50rpx) * 4);
  left: 30rpx;
  right: 30rpx;
  width: calc(100vw - 60rpx);
  background-color: #fff;
  border-radius: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.profile_item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: calc(100vw - 180rpx);
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-bottom: 20rpx;
}

.profile_item_icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 30rpx;
}

.profile_name {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.profile_name_name {
  font-size: 32rpx;
}

.profile_name_zw {
  color: #a0a0a0;
  font-size: 24rpx;
  margin-left: 30rpx;
}

.profile_location {
  color: #a0a0a0;
  font-size: 26rpx;
}

.profile_phone {
  margin-top: 30rpx;
  font-size: 26rpx;
}

.profile_operate {
  margin-top: 40rpx;
  font-weight: bold;
  font-size: 26rpx;
}

.profile_operate_btn1 {
  display: flex;
  flex-direction: row;
  width: 200rpx;
  height: 60rpx;
  margin-right: 30rpx;
  justify-content: center;
  align-items: center;
  border: #2f95fb 1px solid;
  border-radius: 50rpx;
  color: #2f95fb;
}

.profile_operate_btn2 {
  display: flex;
  flex-direction: row;
  width: 300rpx;
  height: 60rpx;
  justify-content: center;
  align-items: center;
  border: #2f95fb 1px solid;
  background-color: #2f95fb;
  border-radius: 50rpx;
  color: #fff;
}

.profile_flag {
  position: absolute;
  top: calc(200rpx + 48rpx + 100rpx + (96rpx - 36rpx / 2));
  right: calc(96rpx / 2 - 32rpx / 2 + 10rpx);
  width: 36rpx;
  height: 36rpx;
  background-color: #2f95fb;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.profile_flag cover-image {
  width: 24rpx;
  height: 24rpx;
}

.retrun_view {
  position: fixed;
  display: flex;
  left: 15rpx;
  width: 162rpx;
  height: 64rpx;
  z-index: 1001;
}

.card_manage {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 162rpx;
  height: 64rpx;
  background-color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  text-align: center;
  border-radius: 50rpx;
  color: #fff;
}

.title {
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  left: 225rpx;
  width: calc(100vw - 225rpx * 2);
  height: 64rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
}
