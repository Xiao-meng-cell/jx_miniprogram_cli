/* pages/skill/skill.wxss */

.page {
  width: 100%;
  background-color: #fff;
  height: 100vh;
}

/*隐藏滚动条  */

/* ::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}  */

/*左侧  */

.left-cont {
  width: 25%;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  background: #efeff4;
  overflow: auto;
}

.classify {
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  border-bottom: 1px #e8e8e8 solid;
  border-left: 6rpx #eee solid;
  font-size: 28rpx;
}

.active {
  background-color: #fff;
  color: #fb4c22;
  border-left: 6rpx #fb4c22 solid;
}

/*右侧  */

.right-cont {
  width: 75%;
  position: fixed;
  margin-left: 25%;
  top: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  background: #fff;
  overflow: auto;
}

/*人民币符号*/

.cai_price:before {
  content: "￥";
  font-size: 14px;
}

.nav-right {
  /* width: 70%; */
  display: flex;
  flex-direction: column;
}

.nav-right .title {
  font-size: 30rpx;
  color: black;
  /* padding: 20rpx; */
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 10px;
  font-weight: bold;
  background-color: #efeff4;
}

.nav-right .classify-item {
  display: flex;
  flex-wrap: wrap;
  /* padding: 20rpx; */
}

.classify-item .item {
  display: flex;
  flex-direction: column;
  width: 32%;
  align-items: center;
  justify-content: center;
  padding-bottom: 14rpx;
}

.classify-item .hoverclass {
  background: #f9f9f9;
}

.item image {
  width: 87rpx;
  height: 87rpx;
  margin-top: 16rpx;
}

.item .name {
  font-size: 24rpx;
  color: dimgray;
  white-space: nowrap;
  width: 150rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 16rpx;
  text-align: center;
  height: 30rpx;
  line-height: 30rpx;
}

.classList {
  display: flex;
  flex-wrap: wrap;
}

.classItem {
  display: flex;
  flex-direction: column;
  width: 25%;
  align-items: center;
  justify-content: center;
  padding-bottom: 30rpx;
}

.classItem image {
  width: 96rpx;
  height: 96rpx;
  margin-top: 16rpx;
}

.classItem .name {
  font-size: 24rpx;
  color: dimgray;
  white-space: nowrap;
  width: 150rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 16rpx;
  text-align: center;
  height: 30rpx;
  line-height: 30rpx;
}