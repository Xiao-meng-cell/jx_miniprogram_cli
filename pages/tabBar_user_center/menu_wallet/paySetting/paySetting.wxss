/* pages/tabBar_user_center/menu_wallet/paySetting/paySetting.wxss */
.password {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 176rpx;
}

.password>text:nth-of-type(1) {
  font-size: 40rpx;
  font-weight: bold;
  color: #37424d;
  margin-bottom: 24rpx;
}

.password>text:nth-of-type(2) {
  font-size: 28rpx;
  font-weight: 500;
  color: #a0a0a0;
  margin-bottom: 48rpx;
}

.forgetPassword {
  font-size: 24rpx;
  font-weight: 500;
  color: #a0a0a0;
  margin-top: 40rpx;
}

.code {
  display: flex;
  flex-direction: column;
  margin: 48rpx 32rpx 0px 32rpx;
  width: calc(100vw - 32rpx * 2);
}

.code>view {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 96rpx;
  margin-bottom: 32rpx;
}

.code>view>text {
  font-size: 28rpx;
  color: #37424D;
  margin-right: 32rpx;
}

.code>view>view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: calc(100% - 28rpx * 3 - 32rpx);
  height: 100%;
  border-bottom: 2rpx solid #eeeeee;
}

.code>view>view>text:nth-last-child(1) {
  font-size: 28rpx;
  color: #37424d;
}

.getCode {
  padding: 10rpx 20rpx;
  border: 2rpx solid #2f95fb;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #2f95fb;
}

.captchaReset {
  padding: 10rpx 20rpx;
  border: 2rpx solid #a0a0a0;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #a0a0a0;
}

.next {
  margin-top: 58rpx;
  justify-content: center;
  width: calc(100vw - 32rpx * 2);
  background: #2f95fb;
  border-radius: 44rpx;
}