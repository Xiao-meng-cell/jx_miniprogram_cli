/* miniprogram/pages/tabBar_user_center/business_card_manage/business_card_members/business_card_members.wxss */
page {
  background: #f6f6f6;
}

.card_list_merchant {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-bottom: 24rpx;
}

/* 操作区域 start  */
.viewOperta {
  display: flex;
  flex-direction: column;
}

.viewOperta>view:not(:first-child) {
  margin: 24rpx 32rpx 0px 32rpx;
  padding: 0px 32rpx;
  border-radius: 24rpx;
  background: #fff;
  width: calc(100vw - 32rpx * 4);
  height: 104rpx;
}

/* 搜索栏 start  */
.search_column {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 8rpx;
  background: #fff;
  padding: 12rpx 32rpx;
}

.search_column_icon {
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  margin-left: 24rpx;
}

.search_column_input {
  width: calc(100% - 24rpx * 4 - 28rpx * 2 - 32rpx);
  background-color: #f4f4f4;
  border-radius: 48rpx;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  padding-left: calc(24rpx * 2 + 32rpx);
}

.search_column>text {
  color: #a0a0a0;
  font-size: 28rpx;
  margin-left: 24rpx;
}

.search_column_item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.search_column_item>image {
  width: 24rpx;
  height: 24rpx;
}

/* 搜索栏 end  */
/* 操作区域 end  */

/* 邀请合伙人 start  */

.inviteBg {
  display: flex;
  flex-direction: column;
  position: absolute;
  justify-content: flex-end;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
}

.inviteBg>view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 25vh;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.inviteBg>view>button>view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.inviteBg>view>button>view>image {
  width: 15vw;
  height: 15vw;
}

.inviteBg>view>button>view>text {
  font-size: 3.6vw;
  margin-top: 1.5vh;
}

/* 邀请合伙人 end  */

/*首字母组建样式 start*/
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}

.header .h-city {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  line-height: 1.0;
  letter-spacing: 0.4px;
  text-align: center;
  color: #a8a8a8;
}

.header .h-city image {
  width: 22rpx;
  height: 27rpx;
  margin-right: 16rpx;
}

.header .h-close image {
  width: 40rpx;
  height: 40rpx;
}

.now-city {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  background: #f2f4f5;
  font-size: 22rpx;
  line-height: 1.0;
  color: #a8a8a8;
  padding: 18rpx 20rpx;
  border-bottom: 1rpx solid #dbdbdb;
}

.now-city .now-city-name {
  display: flex;
  background: white;
  font-size: 30rpx;
  line-height: 1.0;
  letter-spacing: 0.4rpx;
  color: #333333;
  padding: 13rpx 33rpx;
  border: solid 1rpx #dbdbdb;
  margin-top: 18rpx;
}


.alphabet-list .section-item .section-item-header {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #a8a8a8;
  background-color: rgb(237, 237, 237);
  padding: 15rpx 35rpx;
}

.alphabet-list .section-item .section-item-cells {
  padding-left: 35rpx;
}

.alphabet-list .section-item .section-item-cells .section-item-cell {
  font-size: 30rpx;
  line-height: 1.0;
  color: #333333;
  padding: 16rpx 0;
  display: flex;
  align-items: center;
}

.alphabet-list .section-item .section-item-cells .section-item-cell text {
  padding-left: 35rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.border-bottom {
  position: relative;
  border: none;
}

.border-bottom:after {
  content: '';
  position: absolute;
  bottom: 0;
  background: rgb(237, 237, 237);
  width: 85%;
  height: 2rpx;
  right: 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}

.alphanet-selector {
  position: fixed;
  top: 0;
  right: 0;
  height: 90vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  z-index: 99;
  box-sizing: border-box;
  bottom: 0;
  margin: auto;
  margin-right: 12rpx;
  color: #37424D;
}

.bg {
  background-color: rgba(0, 0, 0, 0.2)
}

.alphanet-selector .selector-one {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.selector-one:not(:first-child) {
  margin-top: 12rpx;
}

.avater {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

/* 不兼容 */
.show-alpha {
  width: 150rpx;
  height: 150rpx;
  background-color: rgba(0, 0, 0, 0.4);
  font-size: 50px;
  color: #fff;
  text-align: center;
  line-height: 150rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 20rpx;
}

.section-item-header {
  font-size: 28rpx;
  color: #A0A0A0A0;
  margin-bottom: 12rpx;
}

/*首字母组建样式 end*/

/**卡片列表 start **/
.card_collection {
  display: flex;
  flex-direction: column;
}

.alphabetItem {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.alphabetItem>view:nth-of-type(1) {
  display: flex;
  flex-direction: row;
  padding: 0px 32rpx;
  background-color: #f6f6f6;
}

.alphabetItem>.card_item:not(:last-child) {
  border-bottom: #f6f6f6 2rpx solid
}

.card_item {
  position: relative;
  overflow: hidden;
  display: flex;
  padding: 12rpx 64rpx 12rpx 0px;
  margin-left: 32rpx;
}

.card_item_left {
  width: 96rpx;
  height: 96rpx;
  background: #e5e5e5;
  border-radius: 16rpx;
}

.card_item_right {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 16rpx;
}

.card_item_right>view {
  display: flex;
  flex-direction: column;
  width: calc(100vw - 32rpx - 64rpx - 96rpx - 16rpx * 2 - 48rpx);
  height: 100%;
}

.card_item_right>view>text:nth-child(1) {
  font-size: 32rpx;
}

.card_item_right_phone {
  font-size: 24rpx;
  color: #A0A0A0A0;
}

.card_item_right_position {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.card_item_right_position_text {
  font-size: 28rpx;
  color: #A0A0A0A0;
  margin-right: 24rpx;
}

.positionWidthRole1 {
  max-width: calc(100% - 32rpx - 24rpx - 120rpx - 8rpx);
}

.card_item_right_position>image:nth-of-type(1) {
  width: 32rpx;
  height: 32rpx;
}

.card_item_right_position_syhhr {
  font-size: 24rpx;
  color: #2f95fb;
  margin-left: 8rpx;
}

.card_item_right>image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 16rpx;
}


/**卡片列表 end**/