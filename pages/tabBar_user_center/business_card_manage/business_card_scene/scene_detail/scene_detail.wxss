.left_menu {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
}

.left_menu view {
  font-size: 3.2vw;
}

.tagCode_scroll_x {
  background-color: #f2f2f2;
  height: 100%;
  font-size: 30rpx;
}

.tagCode_item {
  overflow: hidden;
  zoom: 1;
  position: relative;
  height: 110rpx;
  width: 100%;
  text-align: center;
  line-height: 110rpx;
}

.tagCode_item_choose {
  background-color: white;
  color: rgb(91, 134, 254);
}

/**卡片列表 start **/

.card_item {
  width: 77vw;
  min-height: 200rpx;
  background-color: white;
  position: relative;
  border-radius: 10rpx;
  box-shadow: 3px 4rpx 10rpx 3rpx rgba(0, 0, 0, 0.161);
  margin-left: 21vw;
  margin-bottom: 20rpx;
  margin-top: 5rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-around;
}

.card_item_left {
  width: 120rpx;
  height: 120rpx;
  background: #e5e5e5;
  border-radius: 60rpx;
  display: block;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.card_item_right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card_item_right>view:nth-child(1) {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 70rpx;
}

.card_item_right>view:nth-child(1)>view:nth-child(1) {
  font-size: 31rpx;
  max-width: 25vw;
  margin-right: 4rpx;
  font-weight: 600;
}

.card_item_right>view:nth-child(1)>view:nth-child(2) {
  font-size: 24rpx;
  margin-right: 20rpx;
  padding-top: 10rpx;
  width: 180rpx;
}

.card_item_right>view:nth-child(2) {
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-right: 20rpx;
  color: #7c7c7c;
}

.card_item_right>view:nth-child(3) {
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-right: 20rpx;
  color: #7c7c7c;
}

.temp_flag {
  position: absolute;
  width: 0;
  height: 0;
  border-top: 90rpx solid #a0a0a0;
  border-right: 90rpx solid transparent;
  left: 0vw;
}

.temp_flag text {
  position: absolute;
  top: -40rpx;
  left: 38rpx;
  width: 90rpx;
  font-size: 24rpx;
  color: #fff;
}

.rotate {
  transform: rotate(-45deg);
}

/**卡片列表 end**/

.operateBar {
  display: flex;
  flex-direction: row;
  height: 5vh;
  margin-left: 15vw;
  margin-right: 2vw;
  justify-content: flex-end;
}
