/* pages/tabBar_user_center/business_card_manage/business_card_record/business_card_record.wxss */
.card_collection {
  display: flex;
  flex-direction: column;
  background: #f6f6f6;
}

.card_item {
  position: relative;
  display: flex;
  flex-direction: row;
  padding: 32rpx;
  margin: 32rpx;
  background: #fff;
  border-radius: 24rpx;
}

.card_item_left {
  width: 112rpx;
  height: 112rpx;
  background: #eeeeee;
  border-radius: 24rpx;
  margin-right: 36rpx;
}

.card_item_right {
  display: flex;
  flex-direction: column;
  width: calc(100% - 112rpx - 36rpx);
}

.card_item_right>view:nth-of-type(1) {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.card_item_right>view:nth-of-type(1)>text:nth-of-type(1) {
  width: calc(100% - 160rpx);
  font-size: 28rpx;
  line-height: 28rpx;
  color: #37424D;
}

.card_item_right>view:nth-of-type(1)>text:nth-of-type(2) {
  width: 160rpx;
  font-size: 22rpx;
  line-height: 22rpx;
  color: #37424D;
}

.card_item_right>text:nth-of-type(1),
.card_item_right>text:nth-of-type(2) {
  font-size: 22rpx;
  color: #A0A0A0;
  margin-top: 12rpx;
}

.empty_view {
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}

.temp_flag {
  position: absolute;
  top: 0;
  right: 32rpx;
  display: flex;
  background: #2f95fb;
  padding: 0px 24rpx;
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.temp_flag text {
  font-size: 20rpx;
  color: #fff;
}