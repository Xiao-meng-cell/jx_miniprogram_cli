/* miniprogram/pages/tabBar_user_center/business_card_manage/business_card_manage_list/business_card_manage_list.wxss */

.card_list_item {
  background-color: white;
  width: 700rpx;
  min-height: 200rpx;
  position: relative;
  border-radius: 10rpx;
  margin: auto;
  box-shadow: 0px 0rpx 10rpx 2rpx rgba(0, 0, 0, 0.161);
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}

.card_userhaedImg {
  position: relative;
  overflow: hidden;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 30rpx;
}

.card_userhaedImg>image:nth-child(1) {
  background-color: #eee;
  width: 120rpx;
  height: 120rpx;
  position: relative;
  overflow: hidden;
  border-radius: 100rpx;
}

.card_userhaedImg>image:nth-child(2) {
  width: 48rpx;
  height: 48rpx;
  float: right;
  overflow: hidden;
}

.card_username {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.card_username>text:nth-child(1) {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
  max-width: calc((700rpx - 30rpx * 2 - 20rpx) * 0.3);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
  height: 100%;
  line-height: 100%;
}

.card_username>text:nth-child(2) {
  color: #a0a0a0;
  font-size: 24rpx;
  max-width: calc((700rpx - 30rpx * 2 - 20rpx) * 0.35);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
  height: 100%;
  line-height: 100%;
}

.card_username>text:nth-child(3) {
  float: right;
  max-width: calc((700rpx - 30rpx * 2 - 20rpx) * 0.35);
  font-size: 28rpx;
}

.card_space {
  width: 100rpx;
  height: 2rpx;
  background: #e2e2e2;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.card_username>text:nth-child(4) {
  float: right;
  margin-right: 20rpx;
}

.card_list_item>view:nth-child(4),
.temporaryMerchant {
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: #a0a0a0;
  font-size: 24rpx;
}

.card_list_item_addr {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding-left: 30rpx;
  padding-right: 30rpx;
  color: #a0a0a0;
  font-size: 24rpx;
}

.three_dots {
  transform: rotate(90deg);
  -ms-transform: rotate(90deg);
  /* Internet Explorer */
  -moz-transform: rotate(90deg);
  /* Firefox */
  -webkit-transform: rotate(90deg);
  /* Safari å’Œ Chrome */
  -o-transform: rotate(90deg);
  /* Opera */
}

.make_button_left {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #5b86fe;
  color: white;
  border-radius: 60rpx;
}

.make_button_right {
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #5b86fe;
  color: white;
  border-radius: 60rpx;
}

.applyList {
  font-size: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  text-align: right;
  /* color: #5b86fe; */
}

.inviteBg {
  display: flex;
  flex-direction: column;
  position: absolute;
  justify-content: flex-end;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
}

.inviteBg>view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 25vh;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.inviteBg>view>button>view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.inviteBg>view>button>view>image {
  width: 15vw;
  height: 15vw;
}

.inviteBg>view>button>view>text {
  font-size: 3.6vw;
  margin-top: 1.5vh;
}