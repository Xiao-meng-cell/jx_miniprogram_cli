@import "../../../../pages/tabBar_index/business_homepage/business_homepage.wxss";
@import "../../../../pages/clerk/show/show.wxss";

/*名片 start*/

.card_floating_window {
  background-color: white;
  width: 690rpx;
  height: 580rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  margin: auto;
  box-shadow: 0px 0rpx 10rpx 2rpx rgba(0, 0, 0, 0.161);
  margin-top: 2rpx;
}

.card_floating_window>image:nth-child(1) {
  background-color: #eee;
  width: 690rpx;
  height: 400rpx;
  position: relative;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  overflow: hidden;
}

.card_info {
  width: 690rpx;
  height: 90rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.card_info_img {
  width: 112rpx;
  height: 112rpx;
  border-radius: 10rpx;
}

.card_name {
  display: flex;
  flex-direction: column;
  width: 316rpx;
  flex: 1;
  position: relative;
}

.card_name>view:nth-child(1) {
  margin-bottom: 20rpx;
  margin-top: 14rpx;
  display: flex;
}

.card_name>view:nth-child(1)>text:nth-child(1) {
  font-size: 32rpx;
  font-weight: 600;
  color: rgb(50, 50, 50);
  margin-right: 30rpx;
  /* max-width: 150rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
  height: 100%;
  line-height: 100%;
}

.card_name>view:nth-child(1)>text:nth-child(2),
.card_name>view:nth-child(2) {
  font-size: 24rpx;
  color: rgb(160, 160, 160);
}

.card_name::after {
  content: '';
  position: absolute;
  bottom: 0rpx;
  top: 0rpx;
  background: rgb(222, 222, 222);
  height: 90%;
  right: 0rpx;
  margin: auto;
  width: 1px;
  border-radius: 10rpx;
}

.contactBusiness {
  width: 38rpx;
  height: 38rpx;
  margin: 38rpx 30rpx 38rpx 60rpx;
}

/*名片 end*/

.template_list {
  position: fixed;
  background: white;
  z-index: 1000;
  width: 100%;
  height: 100%;
  padding-top: 10rpx;
  top: -10rpx;
}

.template_list>view:nth-child(1) {
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
}

.add_card_message {
  position: fixed;
  background: white;
  z-index: 1000;
  left: 0;
  right: 0;
  top: 10%;
  margin: auto;
}

.noList {
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  font-size: 30rpx;
  color: #a0a0a0;
  text-align: center;
}

/* 隐藏滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.clerk_detail_info {
  width: 690rpx;
  border: 2rpx solid rgb(244, 244, 244);
  margin: auto;
  border-radius: 10rpx;
  overflow: hidden;
}

.clerk_detail_info_intro {
  display: flex;
  align-items: center;
  width: 100%;
  min-height: 90rpx;
  padding-left: 10rpx;
  font-size: 24rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.clerk_detail_info_intro>text:nth-child(1) {
  width: 150rpx;
  color: rgb(128, 128, 128);
}

.clerk_detail_info_intro>view:nth-child(2) {
  width: 100%;
  margin-left: 40rpx;
}

.send_message {
  width: 500rpx;
  top: 40%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 60rpx;
  background-color: #5b86fe;
  color: white;
  text-align: center;
  font-size: 30rpx;
}

.send_message>button {
  height: 100%;
  width: 100%;
  background-color: rgba(255, 255, 255, 0);
  position: absolute;
}

.send_message_cancel {
  width: 200rpx;
  background-color: white;
  color: #5b86fe;
  text-align: center;
  font-size: 30rpx;
  justify-content: center;
}

.setPhone {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  font-size: 30rpx;
  color: #a0a0a0;
  padding-top: 1vh;
  padding-bottom: 1vh;
}

.card_choose_template {
  width: 100%;
  height: 60rpx;
}

