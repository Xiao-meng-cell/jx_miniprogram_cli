/*************视频组件 start****************/
.video_widget {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  z-index: 100;
}

.video_dynamic {
  width: 100%;
  position: absolute;
  z-index: 1000;
  top: 0;
}

.video_dynamic_mask {
  position: absolute;
  width: 100%;
  top: 0;
  height: 100%;
  z-index: 1000;
}

.viewVideo_widget {
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}

.video_end {
  position: relative;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
}

.video_end_item {
  position: absolute;
  width: 230rpx;
  height: 100rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  display: flex;
  align-items: center;
}

.replay {
  left: 50rpx;
}

.share {
  right: 50rpx;
  width: 240rpx !important;
}

.video_end_cover_image {
  width: 80rpx;
  height: 80rpx;
  /* background: rgb(255, 255, 255); */
  border-radius: 64rpx;
  display: inline-block;
}

.video_end_text {
  display: inline-block;
  font-size: 30rpx;
  color: rgb(255, 255, 255);
  margin-left: 10rpx;
}

.video_end_share {
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: 1001;
  background: transparent;
}

/*************视频组件 end****************/

.dataError {
  width: 100%;
  text-align: center;
  position: relative;
}



/***语音 start***/
.mediaInfo_content_border_business {
  background-color: #27325f;
  border-radius: 12rpx;
  padding: 20rpx 30rpx 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.mediaInfo_voice_business {
  display: flex;
  flex-direction: row;
  height: 140rpx;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 54rpx;
  background: white;
}

.mediaInfo_voice_business>image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 12rpx;
  background-color: #a0a0a0;
}

.mediaInfo_voice_business>view:nth-child(1) {
  width: 0rpx;
  height: 0rpx;
  border-bottom: 10rpx solid transparent;
  border-top: 10rpx solid transparent;
  border-right: 10rpx solid #2f95fb;
}

.mediaInfo_voice_business>view:nth-child(2) {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: calc(100vw - 30rpx - 54rpx - 10rpx);
  height: 90rpx;
  border-radius: 12rpx;
  background-color: #2f95fb;
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
}

.mediaInfo_voice_business>view:nth-child(2)>image {
  margin-left: 20rpx;
  margin-right: 30rpx;
  width: 58rpx;
  height: 58rpx;
}

/***语音 end***/