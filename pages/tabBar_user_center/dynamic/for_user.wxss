/* miniprogram/pages/tabBar_user_center/dynamic/for_user.wxss */

page {
  width: 100%;
  height: 100%;
}

.layout_container {
  width: 100%;
  height: 100%;
}

.nav {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  background: #f7f7f7;
  font-size: 28rpx;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.nav-item {
  line-height: 76rpx;
  height: 76rpx;
  width: 20%;
  display: inline-block;
  text-align: center;
  color: #a0a0a0;
}

.isactive {
  line-height: 70rpx;
  height: 70rpx;
  width: 20%;
  display: inline-block;
  text-align: center;
  color: #323232;
  border-bottom: 6rpx #5b86fe solid;
  font-size: 28rpx;
}

.tab-box {
  padding-top: 76rpx;
  height: 100%;
  box-sizing: border-box;
}

.tab-content {
  overflow-y: scroll;
}

.show_item_img {
  width: 160rpx;
  height: 160rpx;
  margin: 0px 20rpx 0px 20rpx;
}

.show_item_content {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  font-size: 28rpx;
  color: #000000;
}
.show_item_sfont{
  color: #a0a0a0;
  font-size: 20rpx;
}

.home_grids {
  overflow: hidden;
  width: 240rpx;
  height: 240rpx;
  padding: 0px;
  margin: 0px;
  margin-right: 10rpx;
}
.home_grid_comm{
  position: relative;
  float: left;
  box-sizing: border-box;
  padding: 0px;
  margin: 0px;
  vertical-align:top;
  border-right: 2rpx solid white;
  border-bottom: 2rpx solid white;
}
.home_grid_one{
  width: 100%;
  height: 100%;
}
.home_grid_two{
  width: 48%;
  height: 100%;
}
.home_grid_three{
  width: 48%;
  height: 50%;
}

.home_icon_three{
  width: 100%;
  height: 116rpx;
  vertical-align:top;

  overflow: hidden;
  position: relative;
  box-sizing: border-box;
  justify-content:center;
  display:block;
}
.home_icon_one{
  height: 100%;
  width: 100%;
  vertical-align:top;

  overflow: hidden;
  position: relative;
  box-sizing: border-box;
  justify-content:center;
  display:block;
}
.home_icon_two{
  height: 100%;
  width: 100%;
  vertical-align:top;

  overflow: hidden;
  position: relative;
  box-sizing: border-box;
  justify-content:center;
  display:block;
}




.video_contain{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
  box-sizing: border-box;
  justify-content:center;
  display:block;
}
.video_icon{
  width: 60rpx;
  height: 60rpx;
  position:absolute;
  /* right: 50%; */
  top: 38%;
  left: 40%;
}
.video_contain_video {
  width: 100%;
  height: 500rpx;
  justify-content: center;
  display: flex;
}