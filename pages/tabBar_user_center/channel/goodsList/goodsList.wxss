/* pages/tabBar_user_center/channel/goodsList/goodsList.wxss */
page {
  background: rgb(244, 244, 244);
}

.channelGoods {
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.loginTip {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #a0a0a0;
}

.loginTip>view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: rgb(60, 177, 245);
  font-size: 24rpx;
  color: #fff;
  margin-top: 30rpx;
  padding: 10rpx 30rpx 10rpx 30rpx;
  border-radius: 12rpx;
}

/* 商品分类 start  */

.goods_tag {
  display: flex;
  flex-direction: row;
  align-items: center;
  white-space: nowrap;
  margin-top: 26rpx;
}

.goods_tag>scroll-view {
  width: calc(100% - 40rpx - 32rpx * 2);
}

.goodsTagItem {
  display: inline-block;
  font-size: 24rpx;
  line-height: 40rpx;
  border-radius: 28rpx;
  background-color: #fff;
  color: #202020;
  padding: 12rpx 24rpx 12rpx 24rpx;
}

.goodsTagItem_selected {
  background-color: #2f95fb;
  color: #ffffff;
}

.goodsTagItem:not(:first-child) {
  margin-left: 24rpx;
}

.goodsTagItem:last-child {
  margin-right: 32rpx;
}

.business_goods_tag {
  width: 40rpx;
  height: 40rpx;
}

.business_goods_tag_masking {
  right: 40rpx;
  width: 40rpx;
  height: 64rpx;
  background: linear-gradient(to right, rgba(255, 255, 255, 0), rgba(246, 247, 248, 1));
}

/* 商品分类 end  */

/* 货源列表 start  */
.goodsList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
  box-sizing: border-box;
  margin-top: 24rpx;
}

.goodsItem {
  box-sizing: border-box;
  width: 330rpx;
  margin-bottom: 30rpx;
  min-height: 10vh;
  border-radius: 18rpx;
}

.goodsItem:nth-child(2n) {
  margin-left: 24rpx;
}

.goodsItem>image {
  width: 330rpx;
  height: 330rpx;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  background-color: #a0a0a0;
}

.goodsItem>view {
  display: flex;
  flex-direction: column;
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-bottom: 10rpx;
}

.estateInfo {
  background-image: url(https://weclubbing.oss-cn-shenzhen.aliyuncs.com/static/miniProgramBusiness/assets/estateBG.png);
  -moz-background-size: 100% 100%;
  background-size: 100% 100%;
}

.normalInfo {
  background-color: #fff;
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}

.goodsItem>view>text:first-child {
  height: 65rpx;
  font-size: 24rpx;
}

.goodsItemBottomBar {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.goodsItemBottomBar>image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.goodsItemBottomBar>text {
  color: #a0a0a0;
  font-size: 20rpx;
  line-height: 20rpx;
}

.priceInfo {
  display: flex;
  flex-direction: row;
  font-size: 20rpx;
  margin-bottom: 8rpx;
  margin-top: 8rpx;
}

.channelInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 3vw;
  color: #a0a0a0;
}

.channelInfo image {
  width: 5.5vw;
  height: 5.5vw;
  border-radius: 50rpx;
  margin-right: 3vw;
  background-color: #a0a0a0;
}

.recruitInfoItem {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  background: rgb(244, 244, 244);
}

.goodsList_loadAll {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
  width: 100%;
  font-size: 20rpx;
  color: #a0a0a0;
}

/* 货源列表 end  */