/* miniprogram/pages/tabBar_user_center/manager/inputqrcode/inputqrcode.wxss */
page {
  background: #F6F6F6;
}

.main {
  display: flex;
  flex-direction: column;
  margin: 32rpx;
  width: calc(100vw - 32rpx * 2);
}

.item {
  padding: 24rpx 24rpx 38rpx 24rpx;
  background: #fff;
  border-radius: 24rpx;
}

.item:not(:first-child) {
  margin-top: 40rpx;
}

.item>text {
  font-size: 28rpx;
  font-weight: bold;
  color: #37424D;
}

.item>input {
  font-size: 28rpx;
  padding: 24rpx 28rpx;
  margin-top: 24rpx;
  background: #fff;
  border: 2rpx solid #eeeeee;
  border-radius: 16rpx;
}

.placeholder {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  color: #D8D8D8;
  background: #fff;
}

button {
  width: 100%;
  height: 88rpx;
  background: #2F95FB;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  margin-top: 80rpx;
}