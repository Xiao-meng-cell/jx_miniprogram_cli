/* pages/tabBar_index/cart/cart.wxss */

page {
  background-color: #F6F6F6;
}

.login {
  position: fixed;
  display: flex;
  width: 100%;
  height: 100%;
  flex-flow: column;
  align-items: center;
  justify-content: center;
}

.login_btn {
  border-radius: 60rpx;
}

.body {
  display: flex;
  flex-direction: column;
  width: 100%;
  top: 0rpx;
  margin-bottom: 100rpx;
}

.menu {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  padding: 40rpx 30rpx 20rpx 30rpx;
}

.editBtn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 160rpx;
  height: 56rpx;
  background-color: #2f95fb;
  border-radius: 60rpx;
}

.editBtn>view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
}

.editBtn>view>image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.cartItem {
  display: flex;
  flex-direction: column;
  margin: 0rpx 30rpx 40rpx 30rpx;
}

.cartItem_baking{
  margin: 0rpx 30rpx 120rpx 30rpx;
}

.cartItem_merchant {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  padding: 36rpx 16rpx 34rpx 16rpx;
}

.cartItem_merchant>image {
  width: 32rpx;
  height: 32rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  margin-left: 24rpx;
  flex-shrink: 0;
}

.cartItem_merchant>text {
  width: calc(100vw - 30rpx * 2 - 16rpx * 3 - 24rpx - 32rpx - 50rpx);
  font-size: 24rpx;
}

.cartItem_cartList {
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #fff;
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
}

.cartItem_cartList_item {
  display: flex;
  flex-direction: row;
  position: relative;
  align-items: center;
  /* margin: 0rpx 30rpx 20rpx 20rpx; */
}

.cartItem_cartList_item_operate {
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 12rpx;
}

.operate_del {
  display: flex;
  flex-direction: row;
  width: 180rpx;
  height: 56rpx;
  justify-content: center;
  align-items: center;
  background-color: #2f95fb;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 6rpx;
}

.operate_del>image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.operate_del>text {
  line-height: 24rpx;
}

.cartItem_cartList_item>radio {
  margin-left: 16rpx;
}

.cartItem_cartList_item>view:nth-child(2) {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.goodsInfo {
  display: flex;
  flex-direction: row;
  position: relative;
}

/* 左侧产品图片 */

.goodsInfo>image:nth-child(1) {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  background-color: #f4f4f4;
}

.disableImg {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  background-color: rgba(0, 0, 0, 0.4);
}

/* 右侧产品信息 */

.goodsInfo_info {
  display: flex;
  flex-direction: column;
  width: calc(100% - 24rpx - 180rpx);
  margin-left: 24rpx;
}

/* 产品标题 */

.goodsInfo_title {
  width: 384rpx;
  /* height: 68rpx;
  line-height: 34rpx; */
  font-size: 22rpx;
  color: #37424D;
}

/* 选中sku */

.goodsInfo_skuText {
  margin: 0rpx 10rpx 0rpx 0rpx;
  font-size: 20rpx;
  line-height: 20rpx;
  color: #37424D;
  padding: 6rpx 10rpx 6rpx 10rpx;
  background: rgba(128, 128, 128, 0.05);
  border-radius: 16rpx;
  margin-top: 8rpx;
}

/** 产品价格区域 */

.goodsInfo_price {
  display: flex;
  flex-direction: row;
  height: 40rpx;
  align-items: center;
  margin-top: 2rpx;
}

.goodsInfo_price>view:nth-of-type(1) {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.goodsInfo_price>view:nth-of-type(1)>text:nth-child(1) {
  font-size: 20rpx;
  font-weight: bold;
  line-height: 20rpx;
  margin-right: 0rpx;
}

.goodsInfo_price>view:nth-of-type(1)>text:nth-child(2) {
  font-size: 24rpx;
  font-weight: bold;
  line-height: 24rpx;
}

/* 数量加减 */

.num_view {
  display: flex;
  flex-direction: row;
  float: right;
  justify-content: space-between;
  align-items: center;
}

.num_view image {
  width: 40rpx;
  height: 40rpx;
}

.num_view>image:nth-child(1) {
  margin-right: 10rpx;
}

.num_view>text {
  font-size: 28rpx;
  line-height: 28rpx;
  font-weight: bold;
  padding: 6rpx 32rpx 6rpx 32rpx;
  background: #F6F7F8;
}

.num_view>image:nth-child(3) {
  margin-left: 10rpx;
}

/* 标签 */

.goodsInfo_tag {
  display: flex;
  flex-direction: row;
  margin-top: 8rpx;
}

.goodsInfo_tag>view:nth-child(2),
.goodsInfo_tag>view:nth-child(3) {
  margin-left: 10rpx;
}

.ddzt {
  color: #2F95FB;
  background: rgba(47, 149, 251, 0.1);
}

.wlsp {
  color: rgba(255, 111, 0, 1);
  background: rgba(255, 111, 0, 0.1);
}

.xnsp {
  color: rgba(255, 183, 77, 1);
  background: rgba(255, 183, 77, 0.1);
}

.goodsInfo_tag_item {
  font-size: 14rpx;
  line-height: 14rpx;
  padding: 5rpx 10rpx 5rpx 10rpx;
  border-radius: 16rpx;
}

/* 优惠信息 */

.discount {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.discount>view {
  font-size: 20rpx;
  color: #2f95fb;
  border: 1rpx #2f95fb solid;
  border-radius: 8rpx;
  padding: 5rpx 10rpx 5rpx 10rpx;
}

.discount>view>text {
  line-height: 20rpx;
}

.discount>text {
  font-size: 24rpx;
  font-weight: bold;
  margin-left: 30rpx;
}

/* 结束时间 */

.endTime {
  font-size: 22rpx;
  color: #37424D;
  margin-top: 20rpx;
}

.endTime>view {
  display: flex;
  flex-direction: row;
}

.endTime>view>image {
  width: 96rpx;
  height: 28rpx;
}

/* 底部操作栏 start */

.dot {
  position: fixed;
  width: 100%;
  min-height: 98rpx;
  background-color: #fff;
}

.dot_list{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.dot_total{
  height: 98rpx;
}
.delivery_time{
  height: 98rpx;
  padding: 0rpx 30rpx;
}

.time_picker {
  width: 60vw;
  text-align: right;
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6f00;
}

.select_arrow{
  display: block;
  width: 24rpx;
}

.total {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 26rpx;
  margin-right: 26rpx;
}

.submit {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 32rpx;
  width: calc(96rpx * 2);
  height: calc(35rpx * 2);
  background: #2F95FB;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
}

.removeCart {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
  width: 180rpx;
  height: 56rpx;
  color: #a0a0a0;
  font-size: 24rpx;
  border: 1px #a0a0a0 solid;
  border-radius: 6rpx;
}

.removeCart>image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}

/* 底部操作栏 end */

.empty {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.fgx {
  height: 2rpx;
  background-color: #eeeeee;
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-bottom: 34rpx;
}