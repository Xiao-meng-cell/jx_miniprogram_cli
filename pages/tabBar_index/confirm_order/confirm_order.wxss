/*商品描述*/
.goods_describe{
  padding-top: 30rpx;
  display: flex;
  justify-content: center;
}

.goods_describe>image:nth-child(1){
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  background-color: #a0a0a0;
}

.goods_price {
  margin-left: 30rpx;
  width:80%;

}

.goods_price>view:nth-child(1) {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-size: 34rpx;
}

.goods_price>view:nth-child(2) {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 30rpx;
}

.goods_price>view:nth-child(3)>text:nth-child(1) {
  color: #fb5c56;
  font-size: 34rpx;
  font-weight: 600;
}

.goods_price>view:nth-child(3)>text:nth-child(2) {
  color: #a0a0a0;
  font-size: 22rpx;
  margin-left: 20rpx;
  text-decoration: line-through;
}

.goods_price>view:nth-child(3)>text:nth-child(3) {
  font-size: 22rpx;
  color: #fb5c56;
  border: 1rpx solid #fb5c56;
  border-radius: 10rpx;
  padding-top: 6rpx;
  padding-bottom: 6rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  line-height: 24rpx;
  margin-left: 20rpx;
}

