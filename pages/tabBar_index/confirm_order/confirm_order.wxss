/**收获地址**/

.receiving_address {
  height: 200rpx;
  display: flex;
  align-items: center;
  flex: none;
  justify-content: space-between;
}

.receiving_address>image:nth-child(1) {
  width: 38rpx;
  height: 38rpx;
}

.receiving_address>view:nth-child(2){
  width: 550rpx;
}

.receiving_address>view:nth-child(2)>text:nth-child(2) {
  font-size: 24rpx;
}

.receiving_address>view:nth-child(2)>view:nth-child(1) {
  font-size: 24rpx;
  
}

.receiving_address>image:nth-child(3) {
  width: 28rpx;
  height: 28rpx;
}

