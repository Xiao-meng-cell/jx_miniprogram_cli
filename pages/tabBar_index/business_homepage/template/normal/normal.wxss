/* 商品列表 end */

/* 企业简介 start  */

#business_info {
  margin: 20rpx 32rpx 0 32rpx;
}

.business_info {
  font-size: 24rpx;
}

.business_info>view:nth-child(1) {
  display: flex;
  flex-direction: row;
  margin-top: 24rpx;
}

.business_info>view:nth-child(2) {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.business_info>view:nth-child(2)>text {
  color: #2f95fb;
  font-size: 24rpx;
}

/* 企业简介 end  */


/* 成为合伙人 start  */
.joinMe {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 24rpx;
  padding-left: 20rpx;
  padding-right: 26rpx;
  width: 100%;
  height: 72rpx;
  background: #e4f2ff;
  border-radius: 16rpx;
  color: #2f95fb;
  font-size: 24rpx;
  box-sizing: border-box;
}

.joinMe>image:nth-of-type(1) {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.joinMe>image:nth-of-type(2) {
  width: 15rpx;
  height: 27rpx;
}

/* 成为合伙人 end  */


/* 品牌货源入口 start  */

.channelGoods {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  padding: 24rpx;
  margin-top: 24rpx;
  border-radius: 16rpx;
}

.channelGoods>view:nth-child(1) {
  display: flex;
  flex-direction: column;
  font-size: 22rpx;
  color: #37424D;
}

.channelGoods>view:nth-child(1)>image {
  width: 172rpx;
  height: 32rpx;
  margin-bottom: 10rpx;
}

.channelGoods>text:nth-child(3) {
  font-size: 22rpx;
  color: #A0A0A0;
}

