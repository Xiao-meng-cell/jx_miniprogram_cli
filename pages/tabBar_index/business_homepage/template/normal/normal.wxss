/* 商品 关于企业 start  */
.g-doc {
  height: 100%;
}

.tab_business_info {
  box-sizing: border-box;
  background: #fff;
  margin-top: 10rpx;
  text-align: center;
  padding: 10px 0;
}

.unselected_tag_menu {
  display: inline-block;
  font-size: 28rpx;
}

.selected_tag_menu {
  position: relative;
  display: inline-block;
  font-size: 32rpx;
  font-weight: bold;
  color: #2f95fb;
}

.screening_fixed {
  position: fixed;
  width: 100%;
  background: rgb(255, 255, 255);
  z-index: 1000;
  left: 0;
  padding: 20rpx 0;
  text-align: center;
}

.tab_business_info>view,
.screening_fixed>view {
  width: 100%;
  text-align: center;
  position: relative;
}

.tab_business_info>view:not(:first-child),
.screening_fixed>view:not(:first-child) {
  margin-left: 40rpx;
}

.tab_business_info>view>text {
  position: relative;
  flex: 1;
  width: 100%;
  display: block;
}

.selected_tag_menu ::after {
  position: absolute;
  display: block;
  content: '';
  width: 60rpx;
  height: 6rpx;
  left: 50%;
  bottom: -10rpx;
  margin: 0 0 0 -30rpx;
  background: #2f95fb;
}

.switch::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  background: #2f95fb;
  width: 25rpx;
  right: 0;
  left: 0;
  margin: auto;
  height: 8rpx;
  border-radius: 20rpx;
}

.news_title {
  margin-top: 32rpx;
  color: #37424D;
  font-size: 1rem;
  font-weight: bold;
  width: 100%;
}

/* 商品 关于企业 end  */

/* 遮罩层 start  */
.gradual {
  margin-left: -32rpx;
  margin-right: -32rpx;
  width: 100vw;
  height: 96rpx;

}

.gradualBgColor {
  background: linear-gradient(to bottom, #ffffff, #F6F6F6);
}

/* 遮罩层 end  */

/* 商品列表 start */

.goodsList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
  box-sizing: border-box;
  justify-content: space-between;
  margin: 20rpx 0 0 0;
  padding: 0 32rpx;
}

#goodsItem {
  width: 48%;
}

