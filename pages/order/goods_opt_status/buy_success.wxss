/* miniprogram/pages/order/goods_opt_status/buy_success/buy_success.wxss */

.status_icon {
  width: 140rpx;
  height: 140rpx;
  margin-top: 60rpx;
}

.status_title {
  font-size: 32rpx;
  margin-top: 40rpx;
  color: #323232;
}

.status_tip {
  font-size: 24rpx;
  margin-top: 30rpx;
  color: #a0a0a0;
}

.look-btn {
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-top: 60rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
  background-color: #5b86fe;
}

.list_contain {
  overflow: hidden;
  margin-top: 20rpx;
}

.home_grid {
  position: relative;
  float: left;
  padding: 20rpx 20rpx;
  width: 50%;
  box-sizing: border-box;
}

.home_icon {
  width:300rpx;
  height: 500rpx;
  justify-content: center;
  display: flex;
}

.home_grid_text {
  color: #323232;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  font-size: 28rpx;
  -webkit-box-orient: vertical;
}

.image_contain {
  width: 100%;
  min-height: 300rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  overflow: hidden;
  position: relative;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid #5b86fe;
  box-shadow:0rpx 6rpx 16rpx #e4e4e4;
}

.image_contain_text_contain {
  position: absolute;
  padding-left: 16rpx;
  padding-right: 16rpx;
  padding-top: 4rpx;
  padding-bottom: 4rpx;
  color: white;
  right: 20rpx;
  top: 20rpx;
  background-color: black;
  opacity: 0.5;
  border-radius: 30rpx;
  font-size: 22rpx;
}

