/* miniprogram/pages/tabBar_activity/goods_list/goods_list.wxss */

page {
  background: rgb(244, 244, 244);
}

.type {
  display: flex;
  flex-direction: row;
  height: 72rpx;
  align-items: center;
}

.type_bg_jpgw {
  background: -webkit-linear-gradient(#fdb221, #fcb812);
}

.type_bg_fxfl {
  background: -webkit-linear-gradient(#4088fa, #4395fa);
}

.type_bg_zstj {
  background: -webkit-linear-gradient(#c342e8, #c04ff3);
}

.type>view {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 4vh;
  padding-left: 3vw;
  padding-right: 3vw;
  margin-left: 2vw;
  margin-right: 2vw;
  color: #a0a0a0;
}

.selectType {
  border-bottom: 5rpx #fff solid;
}

.type text {
  font-size: 3.6vw;
}

.sort {
  display: flex;
  flex-direction: row;
  height: 72rpx;
  align-items: center;
}

.sort_bg_jpgw {
  background: -webkit-linear-gradient(#fcb812, #fdd253);
}

.sort_bg_fxfl {
  background: -webkit-linear-gradient(#4395fa, #64affb);
}

.sort_bg_zstj {
  background: -webkit-linear-gradient(#c04ff3, #c96ff8);
}

.sort>view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #fff;
}

.goodsList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
  box-sizing: border-box;
  padding: 0rpx 15rpx 0 15rpx;
  background: rgb(244, 244, 244);
}

.goodsItem {
  box-sizing: border-box;
  width: 330rpx;
  margin: 0 15rpx 30rpx 15rpx;
  min-height: 10vh;
  background-color: #fff;
  border-radius: 18rpx;
}

.goodsItem>image {
  width: 330rpx;
  height: 330rpx;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  background-color: #a0a0a0;
}

.goodsItem>view {
  display: flex;
  flex-direction: column;
  padding-bottom: 10rpx;
}

.goodsItem>view>text:first-child {
  font-size: 28rpx;
  color: rgb(50, 50, 50);
  /* height: 76rpx; */
}

.goodsItem_store_dis {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  color: #a0a0a0;
}

.goodsItem_store_dis>image:nth-child(1) {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50rpx;
}

.goodsItem_store_dis>text:nth-child(2) {
  font-size: 22rpx;
  width: 150rpx;
  margin-left: 8rpx;
}

.goodsItem_store_dis>image:nth-child(4) {
  width: 24rpx;
  height: 24rpx;
}

.goodstag {
  display: flex;
  font-size: 16rpx;
  justify-content: left;
  align-items: center;
  margin: 16rpx 16rpx 0rpx 0rpx;
}

.goodstag_deliver {
  border-top-right-radius: 4rpx;
  border-bottom-right-radius: 4rpx;
  box-sizing: content-box;
  padding-right: 4rpx;
}

.goodstag_dd {
  color: #2f95fb;
  border: 1px solid #2f95fb;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.goodstag_wl {
  color: #ff6f00;
  border: 1px solid #ff6f00;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.goodstag_visual {
  color: #FFB74D;
  border: 1px solid #FFB74D;
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.goodstag>view {
  margin-left: 8rpx;
}

.goodstag_text {
  color: white;
  display: inline-block;
  padding: 1rpx 4rpx 1rpx 4rpx;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.goodstag_text_blue {
  background: #2f95fb;
}

.goodstag_text_red {
  background: #ff6f00;
}

.goodstag_text_yellow {
  background: #FFB74D;
}

.goodstag>view:nth-child(2) {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100%;
  border: 1px #ff6f00 solid;
  border-radius: 8rpx;
  color: #ff6f00;
  padding: 4rpx 8rpx 4rpx 8rpx;
  font-size: 16rpx;
  line-height: 16rpx;
}

.goods_bottom {
  display: flex;
  flex-direction: row-reverse;
  justify-content: space-between;
  align-items: center;
  margin-top: 18rpx;
}

.goods_bottom>view {
  display: flex;
  align-items: center;
}

.goods_bottom>view>text {
  font-size: 20rpx;
  color: rgb(160, 160, 160);
  margin-left: 10rpx;
}

.goods_bottom>view>image {
  width: 24rpx;
  height: 24rpx;
}

.goods_padding_margin {
  padding-left: 8rpx;
  padding-right: 8rpx;
}

.empty_view {
  height: calc(100vh - 72rpx * 2);
}

/* 商品筛选过滤栏 start  */

.goodsType {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 72rpx;
  background: white;
}

.goodsType>view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.goodsType>view>view {
  display: flex;
  flex-direction: column;
  margin-left: 8rpx;
}

.goodsType_unselected {
  font-size: 24rpx;
  color: #808080;
}

.goodsType_selected {
  font-size: 28rpx;
  font-weight: bold;
  color: #202020;
}

#triangle-up {
  width: 0;
  height: 0;
  border-left: 5rpx solid transparent;
  border-right: 5rpx solid transparent;
}

.triangle-up_selected {
  border-bottom: 10rpx solid #202020;
}

.triangle-up_unselected {
  border-bottom: 10rpx solid #d8d8d8;
}

#triangle-down {
  width: 0;
  height: 0;
  border-left: 5rpx solid transparent;
  border-right: 5rpx solid transparent;
}

.triangle-down_selected {
  border-top: 10rpx solid #202020;
}

.triangle-down_unselected {
  border-top: 10rpx solid #d8d8d8;
}

/* 商品筛选过滤栏 end  */

/* 玩法过滤 start  */
.activityType {
  position: absolute;
  top: 72rpx;
  left: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: calc(100vh - 72rpx);
  background: rgba(32, 32, 32, 0.8);
}

.activityTypeContent {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
}

.activityTypeContent>view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 32rpx;
  width: 100%;
  height: 80rpx;
  border-bottom: 1px #eeeeee solid;
  color: #202020;
  font-size: 24rpx;
}

/* 玩法过滤 end  */