/* miniprogram/pages/tabBar_activity/search_results/search_results.wxss */

page {
  background: rgb(244, 244, 244);
}

.first_view_serch {
  overflow: hidden;
  zoom: 1;
  padding-bottom: 20rpx;
  background-color: #fff;
}

.search_view {
  border-radius: 40rpx;
  font-size: 24rpx;
  background-color: #f4f4f4;
  width: 75%;
  height: 60rpx;
  margin-left: 30rpx;
  overflow: hidden;
  zoom: 1;
  float: left;
  align-items: center;
}

.search_view>icon {
  margin-left: 20rpx;
  float: left;
  margin-top: 16rpx;
}

.search_view_input {
  padding-left: 10rpx;
  float: left;
  height: 100%;
  width: 80%;
}

.search_view_text {
  float: right;
  display: block;
  font-size: 30rpx;
  margin-right: 30rpx;
  line-height: 60rpx;
}

/*内容部分 start*/

.recommendGoods {
  font-size: 30rpx;
  color: rgb(47, 149, 251);
  text-align: left;
  height: 60rpx;
  display: flex;
}

.goodsList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
  box-sizing: border-box;
  padding: 0rpx 15rpx 0 15rpx;
  background: rgb(244, 244, 244);
  margin-top: 20rpx;
}

.goodsItem {
  box-sizing: border-box;
  width: 330rpx;
  margin: 0 15rpx 30rpx 15rpx;
  background-color: #fff;
  border-radius: 18rpx;
}

.goodsItem>image:nth-of-type(1) {
  width: 330rpx;
  height: 330rpx;
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;
  background-color: #a0a0a0;
}

.goodsItem>view {
  display: flex;
  flex-direction: column;
  margin-top: -25rpx;
}

.goodsItem>view>view:nth-of-type(1) {
  height: calc(20rpx * 2)
}

.goodstag>view {
  margin-left: 10rpx;
}

.goodstag>view:first-child {
  margin-left: 0rpx;
}

.goodsItem>view>text:nth-of-type(1) {
  font-weight: bold;
  font-size: 28rpx;
  color: #323232;
}

/*内容部分 end*/

.empty_view {
  height: calc(100vh - 80rpx);
}

.fresh_flag {
  margin-left: 8rpx;
  width: calc(56rpx * 2);
  height: calc(20rpx * 2);
}