/* pages/travel/waitVerification/waitVerification.wxss */
page {
  background: #F6F6F6;
}

.merChantView {
  position: fixed;
  top: 0px;
  left: 12px;
  padding: 12px 0px;
  background: #F6F6F6;
  display: flex;
  flex-direction: row;
  width: calc(100vw - 12px * 2);
  justify-content: center;
}

.merchantInfo {
  display: flex;
  flex-direction: row;
  max-width: calc(100vw - 12px * 2);
  padding: 8px 12px;
  background: #EEEEEE;
  border-radius: 16px;
}

.merchantInfo>image {
  width: 16px;
  height: 16px;
  margin-right: 4px;
  border-radius: 4px;
}

.merchantInfo>text {
  font-size: 12px;
  width: calc(100% - 16px - 4px);
}

.main {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0px 12px;
  margin-top: calc(12px + 8px * 2 + 16px + 12px);
  margin-bottom: calc(44px + 12px * 2 + 16px + 12px);
  width: calc(100vw - 12px * 2);
}

.orderList {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.orderList>view {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16px 12px;
  background: #ffffff;
  border-radius: 12px;
}

.orderList>view:not(:last-child) {
  margin-bottom: 12px;
}

/* .orderItem>image:nth-of-type(1) {
  width: 24px;
  height: 24px;
  
} */

.orderItem>view:nth-of-type(1) {
  display: flex;
  flex-direction: column;
  width: calc(100% - 24px - 16px * 2 - 64px);
  margin-right: 16px;
}

.orderItem>view:nth-of-type(1)>text {
  font-size: 12px;
}

.orderItem>view:nth-of-type(1)>text:nth-of-type(2) {
  margin-top: 8px;
  color: #A0A0A0;
}

.orderItem>image {
  width: 64px;
  height: 64px;
  border-radius: 12px;
}

.bottom {
  position: fixed;
  bottom: 0px;
  background: #F6F6F6;
  padding-bottom: 44px;
}

.submit {
  display: flex;
  flex-direction: row;
  width: calc(100vw - 16px * 2);
  padding: 12px 0px;
  justify-content: center;
  background: #2f95fb;
  border-radius: 22px;
  margin: 0px 16px;
  font-size: 16px;
}

.submit>text {
  color: #ffffff;
}