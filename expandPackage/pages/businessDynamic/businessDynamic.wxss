/* expandPackage/pages/businessDynamic/businessDynamic.wxss */
page {
  display: flex;
  flex-direction: column;
  background: #f6f6f6;
}
.calssify_view{
  white-space:nowrap;
  height: 80%;
}
.classify {
  position: absolute;
  width: 10%;
  height: 70rpx;
  right: 0;
  top: 0;
  background-color: #fff;

}

.classify .icon {
  width: 50rpx;
  height: 50rpx;
  margin: 0 0 0 10rpx;
}

.type_box{
  position: fixed;
  width: 100%;
  height: 70rpx;
  left: 0;
  background: #fff;
  z-index: 99;
}

.scvNewsType {
  position: relative;
  width: 90%;
  height: 70rpx;
  white-space: nowrap;
  display: block;
}

.newsTypeItem {
  display: inline-block;
  justify-content: center;
  font-size: 24rpx;
  height: 40rpx;
  color: #A0A0A0;
}

.newsTypeItem>text {
  display: flex;
  justify-content: center;
}

.newsTypeItem_selected {
  color: #37424D;
}

.under-line {
  position: absolute;
  top: 60rpx;
  margin-left: calc((160rpx - 40rpx) / 2);
  width: 40rpx;
  height: 8rpx;
  border-radius: 20rpx;
  background: #2f95fb;
  z-index: 1000;
}

.withAnimate {
  transition: all 200ms ease-out;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}

.classify_box {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: 0;
  background: #efefef;
  z-index: 100;
}

.calssify_tab {
  height: 100%;
  overflow: hidden;
  overflow-y: auto;
  margin: 10px 0 40px 0;
}

.classify_top {
  position: relative;
  padding: 20rpx 0;
  background: #fff;
}

.back_box {
  position: absolute;
  left: 20rpx;
  top: 24rpx;
}

.classify_back {
  width: 32rpx;
  height: 32rpx;
}

.classify_titile {
  text-align: center;
}

.classify_box_title {
  display: flex;
  padding: 20rpx 0;
  background: #fff;
}

.classify_box_title div {
  flex: 1;
  font-size: 22rpx;
  text-align: center;
}

.classify_title_active {
  padding: 0 0 12rpx 0;
  border-bottom: 4rpx solid #5b86fe;
}

.classify_good_name {
  position: relative;
  margin: 20rpx 20rpx 0 20rpx;
  font-size: 22rpx;
  padding: 28rpx 60rpx 28rpx 20rpx;
  border-radius: 12rpx;
  background: #fff;
}

.classify_good_name:last-child {
  margin: 20rpx;
}

.goods_name_active {
  color: #5b86fe;
}

.classify_next {
  position: absolute;
  right: 20rpx;
  top: 32rpx;
  width: 32rpx;
  height: 32rpx;
}

.business_news_list {
  padding: 70rpx 32rpx 0 32rpx;
}