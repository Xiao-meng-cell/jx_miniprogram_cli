/* expandPackage/pages/member/records/detail.wxss */
page {
  background: #f6f6f6;
}

.main {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 32rpx 0 0 32rpx;
  padding: 64rpx 24rpx;
  width: calc(100vw - 16px * 2 - 24rpx * 2);
  background: #fff;
  border-radius: 24rpx;
}

.main>image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.title {
  font-size: 24rpx;
  font-weight: 500;
  color: #37424d;
}

.num {
  font-size: 48rpx;
  font-weight: 700;
  color: #37424d;
}

.desc {
  display: flex;
  flex-direction: column;
  margin-top: 48rpx;
  padding-top: 48rpx;
  border-top: 2rpx dashed #d8d8d8;
  width: calc(100% - 24rpx * 2);
}

.desc>view {
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
}

.desc>view:not(:first-child) {
  margin-top: 16rpx;
}

.desc>view>text:nth-of-type(1) {
  width: 200rpx;
  color: #a0a0a0;
  margin-right: 64rpx;
  text-align: right;
}

.desc>view>text:nth-of-type(2) {
  color: #37424d;
}