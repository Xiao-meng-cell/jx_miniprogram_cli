/* 商品筛选过滤栏 start  */

.goodsType {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 72rpx;
}

.goodsType>view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.goodsType>view>view {
  display: flex;
  flex-direction: column;
  margin-left: 8rpx;
}

.goodsType_unselected {
  font-size: 24rpx;
  color: #808080;
}

.goodsType_selected {
  font-size: 28rpx;
  font-weight: bold;
  color: #202020;
}

#triangle-up {
  width: 0;
  height: 0;
  border-left: 5rpx solid transparent;
  border-right: 5rpx solid transparent;
}

.triangle-up_selected {
  border-bottom: 10rpx solid #202020;
}

.triangle-up_unselected {
  border-bottom: 10rpx solid #d8d8d8;
}

#triangle-down {
  width: 0;
  height: 0;
  border-left: 5rpx solid transparent;
  border-right: 5rpx solid transparent;
}

.triangle-down_selected {
  border-top: 10rpx solid #202020;
}

.triangle-down_unselected {
  border-top: 10rpx solid #d8d8d8;
}

/* 商品筛选过滤栏 end  */

/* 玩法过滤 start  */
.activityType {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: rgba(32, 32, 32, 0.8);
}

.activityTypeContent {
  position: fixed;
  top: 195rpx;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: white;
}

.activityTypeContent>view {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 32rpx;
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx #eeeeee solid;
  color: #202020;
  font-size: 24rpx;
}

/* 玩法过滤 end  */