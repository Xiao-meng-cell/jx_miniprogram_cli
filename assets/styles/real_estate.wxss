.projectName {
  color: #323232;
}

/* 楼盘状态 start  */
.projectDescStatus {
  font-size: 20rpx;
  padding: 2rpx 20rpx;
  border-radius: 16rpx;
}

.projectDescStatus_selled {
  color: #FF6F00;
  background: rgba(255, 111, 0, 0.05);
}

.projectDescStatus_other {
  color: #5ABDFF;
  background: rgba(90, 189, 255, 0.05);
}

/* 楼盘状态 end  */

/* 楼盘标签 start  */
.projectDescTag {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 26rpx;
}

.projectDescTagItem {
  padding: 8rpx;
  font-size: 20rpx;
  color: #808080;
  background: rgba(128, 128, 128, 0.05);
  border-radius: 16rpx;
}

.projectDescTagItem:not(:first-child) {
  margin-left: 16rpx;
}

/* 楼盘标签 end  */

/* 内容描述 start  */

.contentView {
  display: flex;
  flex-direction: column;
  padding: 32rpx 72rpx 32rpx 32rpx;
  background: #fff;
}

.contentView>view {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.contentView>view:not(:last-child) {
  margin-bottom: 16rpx;
}

.contentView>view>text:nth-of-type(1),
.contentView>view>text:nth-of-type(3) {
  color: #A0A0A0;
  margin-right: 24rpx;
}

.contentView>view>text:nth-of-type(2),
.contentView>view>text:nth-of-type(4) {
  color: #37424D;
}

/* 内容描述 end  */

.projectDescToDetail {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 64rpx;
  font-size: 24rpx;
  color: #fff;
  background: #5ABDFF;
  border-radius: 32rpx;
  margin-top: 32rpx;
}

/* 户型列表 start  */
.houseLayout {
  display: flex;
  flex-direction: column;
}

.houseLayout>text {
  color: #37424D;
  font-size: 32rpx;
  margin-bottom: 24rpx;
  margin-left: 32rpx;
}

.housePlans {
  display: flex;
  flex-direction: row;
}

.housePlansItem {
  display: flex;
  flex-direction: column;
  margin-left: 32rpx;
  padding: 16rpx 16rpx 34rpx 36rpx;
}

.housePlansItem>image {
  background: #A0A0A0;
  width: calc((100vw - 32rpx * 3 - 16rpx * 7) / 3);
  height: calc((100vw - 32rpx * 3 - 16rpx * 7) / 3);
  border-radius: 24rpx;
}

.housePlansItem>text:nth-of-type(1) {
  width: calc((100vw - 32rpx * 3 - 16rpx * 7) / 3);
  font-size: 24rpx;
  color: #37424D;
  margin-top: 16rpx;
}

.housePlansItem>text:nth-of-type(2) {
  font-size: 22rpx;
  color: #A0A0A0;
  margin-top: 8rpx;
}

/* 户型列表 end  */

/* 项目周边 start  */
.projectNearby {
  display: flex;
  flex-direction: column;
  padding: 48rpx 32rpx 0px 32rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-top: 24rpx;
}

.projectNearby>text:nth-child(1) {
  font-size: 32rpx;
  color: #37424D;
  margin-bottom: 24rpx;
}

.projectNearby>map {
  width: 100%;
  height: 240rpx;
  margin-top: 24rpx;
}

.projectNearbyPoint {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
}

.projectNearbyPointNav {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 68rpx;
  margin-bottom: 20rpx;
}

.projectNearbyPointNavItem {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  line-height: 28rpx;
}

.projectNearbyPointNavItem>image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 4rpx;
}

.projectNearbyPointNavItem_selected {
  color: #2F95FB;
}

.projectNearbyPointNavItem_unselected {
  color: #808080;
}

.switch::after {
  content: '';
  position: absolute;
  bottom: -18rpx;
  background: #2f95fb;
  width: 32rpx;
  height: 4rpx;
  right: 0;
  left: 0;
  margin: auto;
  border-radius: 2rpx;
}

.projectNearbyList {
  display: flex;
  flex-direction: column;
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.projectNearbyListItem {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-top: 24rpx;
  padding-bottom: 16rpx;
}

.projectNearbyListItem:not(:last-child) {
  border-bottom: #EEEEEE 2rpx solid;
}

.projectNearbyListItem>view:nth-child(1) {
  display: flex;
  flex-direction: row;
  margin-bottom: 8rpx;
}

.projectNearbyListItem>view:nth-child(1)>text:nth-of-type(1) {
  font-size: 32rpx;
  color: #37424D;
}

.projectNearbyListItem>view:nth-child(1)>text:nth-of-type(2) {
  font-size: 24rpx;
  color: #37424D;
}

.projectNearbyListItemAddr {
  font-size: 24rpx;
  color: #A0A0A0;
}

.projectNearbyListItemAddrList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.projectNearbyListItemAddrListItem {
  flex-shrink: 0;
  font-size: 20rpx;
  color: #2F95FB;
  padding: 0 8rpx;
  border: #2F95FB 2rpx solid;
  border-radius: 14rpx;
  margin-top: 8rpx;
  margin-right: 4rpx;
}

/* 项目周边 end  */